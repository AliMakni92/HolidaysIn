<!-- /FACEBOOK WIDGET -->
<div class="global-wrap">
    <header id="main-header">
        <div class="header-top">
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        <a class="logo" href="{{ path('super-admin',{'username':app.user.username})}}">


                            <img src=" {{ asset ('img/logo-invert.png')}}" alt="Image Alternative text" title="Image Title" /><a  href="{{ path('super-admin',{'username':app.user.username})}}">  </a>
                        </a>
                    </div>
                    <div class="col-md-3 col-md-offset-2">

                        <div class="form-group form-group-icon-left">

                            <input type="hidden" class="form-control" name ="username" value="">
                        </div>

                    </div>
                    <div class="col-md-4">
                        <div class="top-user-area clearfix">
                            <ul class="top-user-area-list list list-horizontal list-border">
                                <li class="top-user-area-avatar">
                                    <a href="#">


                                        <img class="origin round" src=" {{ asset ('img/40x40.png')}}" alt="Image Alternative text" title="AMaze" />Hi <a  href="{{ path('super-admin',{'username':app.user.username})}}">   {{ app.user.username }} </a>  </a>
                                </li>
                                <li> <a href="{{ path('fos_user_security_logout') }}">
                                        {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="nav">

            </div>
        </div>
        <div class="container">
            <div class="nav">
                <ul class="slimmenu" id="slimmenu">


                    <li><a href="#">Utilisateurs</a></li>
                    <li><a href="#">destination</a></li>
                    <li><a href="#">Hotel</a></li>
                    <li><a href="{{path('afficherVoiture')}}">Voiture</a>
                        <ul>
                            <li><a href="{{path('addVoiture')}}">ajouter voiture</a></li>
                            <li><a href="{{path('afficherVoiture')}}">afficheVoiture</a></li>
                        </ul></li>
                    <li><a href="#">Croisiere</a></li>
                    <li><a href="{{path('afficherVoyageOrganiser')}}">VoyageOrganiser</a>
                        <ul>
                            <li><a href="{{path('addVoyageOrganiser')}}">ajouter voyage</a></li>
                            <li><a href="{{path('afficherVoyageOrganiser')}}">affiche Voyage</a></li>
                        </ul></li>
                    <li><a href="{{path('afficherVol')}}">Vol</a>
                        <ul>
                            <li><a href="{{path('addVol')}}">ajouter vol</a></li>
                            <li><a href="{{path('afficherVol')}}">affiche Vol</a></li>
                        </ul></li>

                </ul>
            </div>


        </div>

    </header>


    <div class="container">
        <form method="post">
            <div class="input-daterange" data-date-format="MM d, D">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group form-group-icon-left">
                            <label>Compagnie</label>
                            <input  placeholder="Compagnie Aerienne" type="text" name="compagnieAerienne"/>
                        </div>
                    </div>




                </div>
                <input class="btn btn-primary mt10" type="submit" value="Chercher vol" />
            </div>
        </form>

    </div>


    <div class="container">
        <div class="row">
            <div class="col-md-6">




            </div>
            <h3>Les Vols</h3>
<center>
    <table border="1">
        <tr>

            <th>Compagnie Aerienne</th>
            <th>Aeroport Départ</th>
            <th>Aeroport Arrivée</th>
            <th>Date Depart</th>
            <th>Date Arrivée</th>
            <th>Places Disponibles</th>
            <th>Prix</th>
            <th>Supprimer</th>
            <th>Modifier</th>





        </tr>
        {% for v in ms %}
            <tr>



                <td> {{ v.compagnieAerienne }}</td>
                <td> {{ v.aeroportDepart }}</td>
                <td> {{ v.aeroportArrivee }}</td>
                <td> {{v.dateDepart | date('d/m/y')}}</td>
                <td> {{v.dateArrivee | date('d/m/y')}}</td>
                <td>  {{ v.nbrePlacesDispo }}  </td>
                <td> {{ v.prix }}</td>
                <td> <a href="{{ path('deleteVol',{ 'numVol': v.numVol}) }}">
                        supprimer
                    </a>

                </td>
                <td>
                    <a href="{{  path('updateVol',{'numVol': v.numVol}) }}">
                        modifier
                    </a>

                </td>



            </tr>
        {% endfor %}
    </table>
</center>


        </div>
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-5">
                </div>
                <div class="col-md-4 col-md-offset-1">

                </div>
            </div>

        </div>
